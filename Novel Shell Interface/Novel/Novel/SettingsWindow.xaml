<Window x:Class="Novel.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="319" Width="384" ContentRendered="Window_ContentRendered">
    <Grid>
        <GroupBox Header="Options:&#xD;&#xA;" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox x:Name="side_bar_check_box" Content="Expand sidebar at startup" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        </GroupBox>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,0,89,10" VerticalAlignment="Bottom" Width="74" Click="Button_Click_1"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="74" Click="Button_Click"/>
    </Grid>
</Window>
