<Window x:Class="Wpf5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Margin="5,5,5,5">
            <TextBox x:Name="xmal_text_box" TextWrapping="Wrap" VerticalAlignment="Bottom" TextChanged="xmal_text_box_TextChanged"/>
            <ScrollViewer VerticalAlignment="Top" Height="286" >
                <TextBlock x:Name="xmal_text_block" TextWrapping="Wrap" Foreground="White" Height="286" Width="507">
                    <TextBlock.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF3A3A3A" Offset="0"/>
                            <GradientStop Color="#FF1F1F1F" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Background><InlineUIContainer>
                		<Label x:Name="label22" Content="Label"/>
                	</InlineUIContainer></TextBlock>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
