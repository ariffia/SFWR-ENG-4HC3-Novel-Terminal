<UserControl x:Class="ATMSimulator.Pages.DestroyCardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Center">You have exhausted all three PIN attempts.</TextBlock>
        <TextBlock FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Center">For security purposes, your card was destroyed.</TextBlock>
        <Image Width="300" HorizontalAlignment="Center" Source="/Pictures/Hints/DestroyCard.png"></Image>
        <TextBlock FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Center">Please contact a branch for assistance.</TextBlock>
        <Button Margin="10" Width="100" Click="EndSession_Handler"> End Session</Button>
    </StackPanel>
</UserControl>
