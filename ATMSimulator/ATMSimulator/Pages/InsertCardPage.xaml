<UserControl x:Class="ATMSimulator.Pages.InsertCardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="Bold">Please Insert your Card</TextBlock>
        <Image Width="300" Source="/Pictures/Hints/InsertCard.png"></Image>
        <TextBlock x:Name="CardReadErrorLabel" TextWrapping="Wrap" Height="50" Foreground="Red"></TextBlock>
        <Button MaxWidth="100" Click="InsertCard_Click">Insert Card</Button>        
    </StackPanel>
</UserControl>
